{
  "name": "app",
  "version": "0.1.0",
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier '**/*.php' --check --config ./prettierrc.js",
    "prettier:fix": "prettier --write '**/*.php' --write --config ./prettierrc.js",
    "precommit": "run-s prettier:fix"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.17.6",
    "@types/node": "^14.14.35",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1"
  }
}
